#!/bin/sh

set -e

echo "Running post inst with"
if  [ "$1" = install ]; then
  echo "Running post inst with install"
  ln -sf /opt/fx-demo/bin/PublicDemoName /bin/fx-demo
fi

if  [ "$1" = configure ]; then
  echo "Running post inst with configure"
  xdg-desktop-menu install /opt/fx-demo/lib/fx-demo-PublicDemoName.desktop
fi

exit 0